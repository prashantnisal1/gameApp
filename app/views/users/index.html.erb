<h3>
  Welcome to the Blackjack result page <%= @user ? @user.name : "" %>
</h3>

<table class="table">
  <tr>
    <th>Player</th>
    <th> Wins </th>
    <th>Losses</th>
    <th> Ties </th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.wins %></td>
    <td><%= user.losses %></td>
    <td><%= user.ties %></td>
  </tr>
<% end %>
</table>

<br />
<%= link_to 'Play a new game', :controller => "games", :action => "setup" %>